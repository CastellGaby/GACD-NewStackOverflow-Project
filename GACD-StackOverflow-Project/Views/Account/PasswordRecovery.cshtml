@model GACD_StackOverflow_Project.Models.AccountPasswordRecoveryModel

@{
    ViewBag.Title = "PasswordRecovery";
}

<h2>MiniStackOverflow</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    if (TempData["ErrorEmail"] != null)
     {
         @TempData["ErrorEmail"].ToString()
     }
    
    <div class="form-horizontal">
        <h4>Recovery Password</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Send Recovery E-mail" class="btn btn-default" />
            </div>
        </div>
    </div>
}


